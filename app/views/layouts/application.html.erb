<!DOCTYPE html>
<html>
<head>
    <title><% if current_user %> - <%= current_user.username %>
        <% end %>Like Twitter</title>
    <%= stylesheet_link_tag :all %>
    <%= javascript_include_tag :defaults %>
</head>
<body>
<div class="main">
    <div class="main_container">
        <div class="header">
            <div class="header_title">
                <img src="/images/twitter-featured1.jpg" width="300" height="100">
            </div>

            <div class="login_box">
                <% if current_user %>
                    <div class="logout_box">
                        <%= link_to 'Home', root_path %> |
                        <%= link_to 'Account Settings', edit_user_path(current_user) %> |
                        <%= link_to 'Logout', logout_url %>
                    </div>
                <% else %>
                    <%= render 'user_sessions/form' %>
                <% end %>

            </div>
        </div>
        <% if current_user %>
            <div class="menu_bar"> `
                <div class="menu_button">
                    <ul>
                        <li><%= link_to 'Home', root_url %></li>
                        <li class="gap"></li>
                        <li><%= link_to 'Profile', public_profile_path(current_user.username) %>  </li>
                        <li class="gap"></li>
                        <li><a href="#">Followers</a></li>
                        <li class="gap"></li>
                        <li><a href="#">Fllowing</a></li>
                    </ul>
                </div>
            </div>
        <% else %>
            <div class="banner">
                <img src="/images/twitter-.jpg" alt="" width="965px" height="300px">
            </div>
        <% end %>
        <div class="container">

            <%= render 'page/alert' %>
            <div class="container_main">
                <%= yield %>

            </div>
        </div>
        <%= render 'common/wholefooter' %>
    </div>
</div>
</body>
</html>

