<h1>Listing addresses</h1>

<table>
  <tr>
    <th>Type</th>
    <th>User</th>
    <th>Country</th>
    <th>State</th>
    <th>City</th>
    <th>Line one</th>
    <th>Line two</th>
    <th>Line three</th>
    <th>Zip code</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @addresses.each do |address| %>
  <tr>
    <td><%= address.type %></td>
    <td><%= address.user_id %></td>
    <td><%= address.country_id %></td>
    <td><%= address.state_id %></td>
    <td><%= address.city_id %></td>
    <td><%= address.line_one %></td>
    <td><%= address.line_two %></td>
    <td><%= address.line_three %></td>
    <td><%= address.zip_code %></td>
    <td><%= link_to 'Show', address %></td>
    <td><%= link_to 'Edit', edit_address_path(address) %></td>
    <td><%= link_to 'Destroy', address, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

